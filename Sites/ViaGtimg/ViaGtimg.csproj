<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageLicenseExpression>WTFPL</PackageLicenseExpression>
        <LangVersion>10.0</LangVersion>
        <Nullable>enable</Nullable>
        <NullableContextOptions>enable </NullableContextOptions>
        <RootNamespace>Ban3.Sites.ViaGtimg</RootNamespace>
        <AssemblyName>Ban3.Sites.ViaGtimg</AssemblyName>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <DebugType>embedded</DebugType>
        <Title>Ban3.Sites.ViaGtimg</Title>
        <Version>1.0.2</Version>
        <Authors>zhaoma</Authors>
        <Company>BAN3</Company>
        <Description>Via Gting.com</Description>
        <PackageIcon>icon.png</PackageIcon>
        <AssemblyVersion>1.0.2.1</AssemblyVersion>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <ApplicationIcon>favicon.ico</ApplicationIcon>
        <Configurations>Release;Debug</Configurations>
        <BaseOutputPath>..\..\output</BaseOutputPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <OutputPath>../../output/</OutputPath>
        <DocumentationFile>../../output/xmls/Ban3.Sites.ViaGtimg.xml</DocumentationFile>
        <AllowedReferenceRelatedFileExtensions>
            .allowedextension
        </AllowedReferenceRelatedFileExtensions>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="favicon.ico" />
        <None Include="..\..\icon.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Update="readme.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Ban3.Infrastructures.NetHttp" Version="1.0.10" />
    </ItemGroup>
</Project>