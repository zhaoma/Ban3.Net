<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageLicenseExpression>WTFPL</PackageLicenseExpression>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <NullableContextOptions>enable </NullableContextOptions>
    <RootNamespace>Ban3.Sites.ViaMicrosoft</RootNamespace>
    <AssemblyName>Ban3.Sites.ViaMicrosoft</AssemblyName>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
      <DebugType>embedded</DebugType>
      <Title>Ban3.Sites.ViaMicrosoft</Title>
      <Version>1.0.0</Version>
      <Authors>zhaoma</Authors>
      <Company>BAN3</Company>
      <Description>Via Netease.com</Description>
      <PackageIcon>icon.png</PackageIcon>
      <AssemblyVersion>1.0.0.1</AssemblyVersion>
      <PackageReadmeFile>readme.md</PackageReadmeFile>
      <ApplicationIcon>favicon.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <OutputPath>..\..\..\output\</OutputPath>
    <DocumentationFile>..\..\..\output\Ban3.Sites.ViaMicrosoft.xml</DocumentationFile>
      <AllowedReferenceRelatedFileExtensions>
          .allowedextension
      </AllowedReferenceRelatedFileExtensions>
  </PropertyGroup>

    <ItemGroup>
        <Content Include="favicon.ico" />
        <None Include="..\..\icon.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Update="readme.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Ban3.Infrastructures.DataPersist" Version="1.0.12" />
        <PackageReference Include="Ban3.Infrastructures.NetHttp" Version="1.0.8" />
    </ItemGroup>
</Project>
