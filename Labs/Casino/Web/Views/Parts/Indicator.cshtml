@using Ban3.Infrastructures.Common.Extensions
@model Ban3.Infrastructures.Indicators.Outputs.LineOfPoint
@{
    Layout = null;
}

<table data-pagination="true" class="table table-hover table-striped table-dark  table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th colspan="2">BIAS</th>
            <th>CCI</th>
            <th colspan="4">DMI</th>
            <th colspan="3">ENE</th>
            <th colspan="2">KD</th>
            <th colspan="3">MACD</th>
            <td>Close</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.EndPoints != null)
        {
            foreach (var point in Model.EndPoints.OrderByDescending(o => o.TradeDate))
            {
                <tr>
                    <td>@point.TradeDate.ToYmd()</td>
                    <td>@point.Bias?.RefBIAS</td>
                    <td>@point.Bias?.RefBIASMA</td>
                    <td>@point.Cci?.RefCCI</td>
                    <td>@point.Dmi?.RefPDI</td>
                    <td>@point.Dmi?.RefMDI</td>
                    <td>@point.Dmi?.RefADX</td>
                    <td>@point.Dmi?.RefADXR</td>
                    <td>@point.Ene?.RefUPPER</td>
                    <td>@point.Ene?.RefENE</td>
                    <td>@point.Ene?.RefLOWER</td>
                    <td>@point.Kd?.RefK</td>
                    <td>@point.Kd?.RefD</td>
                    <td>@point.Macd?.RefDIF</td>
                    <td>@point.Macd?.RefDEA</td>
                    <td>@point.Macd?.RefMACD</td>
                    <td>@point.Close</td>
                </tr>
            }
        }

    </tbody>
</table>
