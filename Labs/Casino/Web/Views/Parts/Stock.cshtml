@model Ban3.Productions.Casino.Contracts.Entities.Stock
@{
    Layout = null;
    var url = $"/data/Candlestick/{Model.Code}?cycle=DAILY";
}

<div>
    <div class="btn-group pb-3" role="group">
        <span class="input-group-text">@Model.Name - @Model.Symbol</span>
        <button class="btn btn-outline-secondary renderChartsButton" type="button" id="button-daily"
                renderElement="chartsDaysContainer"
                dataUrl="@($"/data/Candlestick/{@Model.Code}?cycle=DAILY")">
            DAILY
        </button>
        <button class="btn btn-outline-secondary renderChartsButton" type="button" id="button-weekly"
                renderElement="chartsDaysContainer"
                dataUrl="@($"/data/Candlestick/{@Model.Code}?cycle=WEEKLY")">
            WEEKLY
        </button>
        <button class="btn btn-outline-secondary renderChartsButton" type="button" id="button-monthly"
                renderElement="chartsDaysContainer"
                dataUrl="@($"/data/Candlestick/{@Model.Code}?cycle=MONTHLY")">
            MONTHLY
        </button>
    </div>
    <div id="chartsDaysContainer"
         class="renderCharts roundBox whiteBox"
         style="height: 1400px; width: 100%;"
         renderElement="chartsDaysContainer"
         dataUrl="@url">
    </div>
</div>
