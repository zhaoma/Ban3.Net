@model Ban3.Platforms.TeamFoundationCollector.Application.CollectAndReport.Response.QueryAnythingResult;

@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Request?.Keyword) ? "Query Anything" : Model.Request?.Keyword;
}

@section PreTitle
    {
    <div class="page-header d-print-none text-white" style="margin-top: 0; margin-bottom: 0; height: 60px; overflow: hidden;">
        <div class="row g-2 align-items-center">
            <div class="col">
                <div class="page-pretitle">
                   Query Anything.
                </div>
                <div class="col-12 col-md-auto ms-auto d-print-none">
                    <form action="/home/query" id="form">
                        <div class="row align-items-center">
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <input type="text" class="form-control mb-2" id="id" name="id" placeholder="e.g. CT.Exam.Recon" value="@Model.Request?.Keyword">

                                    <button type="submit" class="btn btn-info mb-2">
                                        <i>
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-filter" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M5.5 5h13a1 1 0 0 1 .5 1.5l-5 5.5l0 7l-4 -3l0 -4l-5 -5.5a1 1 0 0 1 .5 -1.5"></path>
                                            </svg>
                                        </i> Filter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<div class="row row-deck row-cards">
    <div class="col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    @Model.AssemblyFiles.Count dlls,@Model.SpringXmls.Count xmls
                </h3>
            </div>
            <div class="card-body">
                <div class="form-selectgroup form-selectgroup-boxes d-flex flex-column">
                    @foreach (var assemblyFile in Model.AssemblyFiles.OrderBy(o => o.Name))
                    {
                        <label class="form-selectgroup-item flex-fill teamRow">
                            <input type="checkbox" name="SpecialDlls" value="@assemblyFile.FullPath" class="form-selectgroup-input">
                            <div class="form-selectgroup-label d-flex align-items-center p-3">
                                <div class="me-3">
                                    <span class="form-selectgroup-check"></span>
                                </div>
                                <div class="col form-selectgroup-label-content d-flex align-items-center">
                                    <span class="avatar me-3">@(assemblyFile.IsManaged?"M":"N")</span>
                                    <div class="col">

                                        <div class="fileName" title="@assemblyFile.FullPath">@assemblyFile.Name</div>
                                    </div>
                                </div>
                            </div>
                        </label>
                    }
                    @foreach (var springXml in Model.SpringXmls.OrderBy(o => o.FileName))
                    {
                        <label class="form-selectgroup-item flex-fill teamRow">
                            <input type="checkbox" name="SpringXmls" value="@springXml.FilePath" class="form-selectgroup-input">
                            <div class="form-selectgroup-label d-flex align-items-center p-3">
                                <div class="me-3">
                                    <span class="form-selectgroup-check"></span>
                                </div>
                                <div class="col form-selectgroup-label-content d-flex align-items-center">
                                    <span class="avatar me-3">X</span>
                                    <div class="col">
                                        <div class="fileName" title="@springXml.FilePath">@springXml.FileName</div>
                                    </div>
                                </div>
                            </div>
                        </label>
                    }
                    </div>
            </div>
        </div>

    </div>
    <div class="col-md-8 col-lg-8">
        <div class="card" id="relationsContainer">
        </div>
    </div>
</div>

@section TailJs
    {

    <script>
        $(document).ready(function () {
            focusNav("navE");

            $('input[type=checkbox][name=SpecialDlls]').change(function () {
                requestRelations();
            });
            $('input[type=checkbox][name=SpringXmls]').change(function () {
                requestRelations();
            });
        });
    </script>
    }